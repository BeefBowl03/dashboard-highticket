{
  "version": 2,
  "builds": [
    {
      "src": "dashboard-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "dashboard-backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dashboard-backend/**/*",
          "!dashboard-backend/node_modules/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dashboard-backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dashboard-app/$1"
    }
  ]
}
