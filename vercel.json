{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server-domain-backend.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["competitor-finder-backend.js", "domain-databases-backend.js", "namecom-api-backend.js", "competitors-backend.json"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server-domain-backend.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
